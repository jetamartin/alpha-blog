<div class='row'>
  <div class="col-xs-12 center ">
    <h1 class='formTitle'>All Alpha-Blog Users</h1>
  </div>
</div>

<div class="row">
  <div class="col-xs-12 center">
    <%= will_paginate %>
    <% @users.each do |user| %>
      <ul class="listing">
        <div class="row">
          <div class="well col-md-4 col-md-offset-4">
            <li><%= link_to gravatar_for(user), user_path(user) %></li>
            <li class="article-title">
              <%= link_to user.username, user_path(user) %>
            </li>
            <li>
              <small><%= pluralize(user.articles.count, "article") if user.articles %></small></li>
            </li>
            <% if logged_in? && current_user.admin? %>
              <li><%= link_to "Delete this User", user_path(user), method: :delete,
              data: {confirm: "Are you sure you want to delete user: #{user.username} and all their articles"}, 
              class: "btn btn-xs btn-danger" %></li>
              <% end %>
          </div>
        </div>
      </ul> 
    <% end %>
    <%= will_paginate %>
  </div>
</div>
