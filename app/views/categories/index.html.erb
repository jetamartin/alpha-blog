<div class='row'>
  <div class="col-xs-12 center ">
    <h1 class='formTitle'>Categories Listing</h1>
  </div>
</div>
<div align="center">
  <%= will_paginate %>
</div>
<% if @categories.any? %>
  <% @categories.each do |category| %>
    <ul class="listing">
      <div class="row">
        <div class="well col-md-4 col-md-offset-4">
          <li class="article-title">
            <%= link_to "#{category.name}", category_path(category) %>
            <li><small><%= pluralize(category.articles.count, "article") %></small></li>
          </li>
        </div>
      </div>
    </ul>
  <% end %>
% else %>
  <div class="center">
      <p>There are no categories currently defined</p>
  </div>
<% end %>
<div align="center">
  <%= will_paginate %>
</div>