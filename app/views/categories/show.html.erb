<div class="row">
  <div class="center">
    <h1 class="index-title"><%= "Category: "+ @category.name %></h1>
  </div>
</div>

<div class="container center">
  <% if logged_in? && current_user.admin? %>
  <div class="row">
    <!--<span class="badge"><%#=link_to "Edit Category Name", edit_category_path(@category) %></span>-->
    <%= link_to "Edit Category Name", edit_category_path(@category), 
        class: "btn btn-xs btn-primary" %>
    <br></br>
  </div>
  <% end %>
  <div class="row">
    <%= will_paginate @category_articles %>
  </div>
  
</div>

<% if !@category_articles.any? %>
  <p class="lead center">There are no articles currently in this category</p>
  <% if logged_in? %>
    <div class="center">
      <p class="badge"><%= link_to "Add new article in this category?", new_article_path %> </p> 
    </div>
  <% end %>
<% end %>
<div class ="row">
  <%= render 'articles/article', obj: @category_articles %>
</div>

<div align="center">
  <%= will_paginate @category_articles %>
</div>